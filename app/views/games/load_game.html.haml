.col-md-12
  %center
    .head
      %h1
        %strong Spiel auswählen

.col-md-12
  %ul.list-unstyled
    - Game.all.each do |game|
      %li
        .col-md-2
          %strong= game.expected_date.strftime("%d.%m.%Y")
        .col-md-6
          = game.title
        .col-md-4.pull-right
          %span.col-md-2
            = link_to edit_game_path(game) do
              %i.glyphicon.glyphicon-pencil
          %span.col-md-2
            = link_to game_path(game), method: :delete, data: { confirm: 'Bist Du sicher?' } do
              %i.glyphicon.glyphicon-trash
          %span.col-md-4
            = link_to game_path(game) do
              %i.glyphicon.glyphicon-play
              zur Präsentation

.col-md-12
  %center
    = link_to 'zurück', games_path , class: 'btn btn-large btn-success'
