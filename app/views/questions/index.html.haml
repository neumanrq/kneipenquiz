%center
  .head
    %h1
      %strong Fragenkatalog

  %ul.nav.nav-tabs
    %li.active
      = link_to questions_path do
        %i.glyphicon.glyphicon-dashboard
        Uebersicht

  %table.table.table-hover.table-striped
    %tr.custom-head
      %th.name{ colspan: 3 } Titel
      %th Tags
      %th Typ
    - collection.each do |question|
      %tr
        %td
          %strong
            = link_to question.title, question_path(question)
        %td{ colspan: 3 }
          - ["Musik", "Zahlenspiele", "Fun", "unbenutzt"].each do |tag|
            .badge
              = tag
        %td
          .badge
            = question.typus
        %td.actions
          .pull-right
            = link_to question, method: :delete do
              %i.glyphicon.glyphicon-trash
    %tr
      %td{ colspan: 6 }
        = link_to new_question_path do
          %i.glyphicon.glyphicon-plus
          Neue Frage


